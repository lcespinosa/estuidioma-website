<section id="teachers" class="teachers">
  <div class="wrap">
    <h2>Profesores</h2>
    <div class="grid cards">
      {% for p in collections.teachers %}
      <article class="card">
        {% if p.data.photo %}<img src="{{ p.data.photo }}" alt="{{ p.data.title }}" class="avatar"/>{% endif %}
        <h3>{{ p.data.title }}</h3>
        {% if p.data.role %}<p class="muted">{{ p.data.role }}</p>{% endif %}
        {% if p.data.languages %}<p>Idiomas: {{ p.data.languages }}</p>{% endif %}
        {% if p.data.seoDescription %}<p>{{ p.data.seoDescription }}</p>{% endif %}
      </article>
      {% endfor %}
    </div>
  </div>
</section>
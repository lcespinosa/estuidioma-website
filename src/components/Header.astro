---
const nav = [
  { href: "/", label: "Inicio" },
  { href: "#courses", label: "Cursos" },
  { href: "#teachers", label: "Profesores" },
  { href: "#contact", label: "Contacto" }
];
---
<header class="site-header">
  <div class="wrap">
    <a class="brand" href="/">
        <img
            src="img/favicon.png"
            alt="Escuela de Idiomas"
            width="48"
            height="48"
            loading="lazy"
        />
    </a>
    <nav class="nav">
      {nav.map((i) => <a href={i.href}>{i.label}</a>)}
    </nav>
  </div>
</header>
<section id="contact" class="contact">
  <div class="wrap">
    <h2>Contacto</h2>
    <div class="grid two">
      <div>
        <form action="https://api.web3forms.com/submit" method="POST" class="form">
          <input type="hidden" name="access_key" value="6959bec1-a69a-4cc3-a3a0-160ebbe80985">
          <label>Nombre
            <input type="text" name="name" required />
          </label>
          <label>Email
            <input type="email" name="email" required />
          </label>
          <label>Teléfono
            <input type="tel" name="phone" />
          </label>
          <label>Mensaje
            <textarea name="message" required></textarea>
          </label>
          <input type="checkbox" name="botcheck" class="hidden" style="display:none" tabindex="-1" autocomplete="off">
          <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
      </div>
      <div>
        <ul class="contact-list">
          <li><strong>Teléfono:</strong> {{ contact.phone or "+34 000 000 000" }}</li>
          <li><strong>Email:</strong> {{ contact.email or "info@escuela.com" }}</li>
          <li><strong>Dirección:</strong> {{ contact.address or "Calle Ejemplo 123, Ciudad" }}</li>
        </ul>
      </div>
    </div>
  </div>
</section>